---
import type { Project } from "@/data/projects";

type Props = Project;

const { title, techs, link, isComingSoon } = Astro.props;

const formatTechs = (values: string[]) =>
  values.toString().replaceAll(",", " â€¢ ");
---

<>
  {
    isComingSoon && (
      <div class="t group flex w-full flex-col justify-between gap-2 rounded-md border border-theme-border bg-theme-surface-bg p-4 md:flex-row md:items-center">
        <div class="flex flex-col gap-2 md:flex-row md:items-center md:gap-4">
          <p class="text-theme-primary-text font-medium">{title}</p>
          <p class="text-theme-secondary-text text-sm">{formatTechs(techs)}</p>
        </div>

        <p class="w-fit rounded-md bg-theme-hover-bg px-4 py-1 text-theme-secondary-text">Soon</p>
      </div>
    )
  }

  {
    !isComingSoon && (
      <a
        class="group flex w-full cursor-pointer flex-col justify-between gap-2 rounded-md border border-theme-border bg-theme-surface-bg p-4 transition-all duration-300 hover:-translate-y-2 hover:border-theme-secondary-text hover:bg-theme-hover-bg md:flex-row md:items-center"
        href={link}
        target="_blank"
      >
        <div class="flex flex-col gap-4 md:flex-row md:items-center">
          <p class="text-theme-primary-text font-medium">{title}</p>
          <p class="text-theme-secondary-text text-sm">{formatTechs(techs)}</p>
        </div>

        <svg
          width="18"
          height="18"
          viewBox="0 0 18 18"
          fill="none"
          class="transition-all duration-300 group-hover:translate-x-1 text-theme-secondary-text"
        >
          <path
            d="M5.25 12.75L12.75 5.25"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
          <path
            d="M5.25 5.25H12.75V12.75"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </a>
    )
  }
</>
