---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">
  <a href={`mailto:${presentation.mail}`} class="hover:text-theme-primary-text transition-colors"
    >{presentation.mail}</a
  >

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href={`${import.meta.env.BASE_URL}`}
          class:list={{
            ["hover:text-theme-primary-text transition-colors"]: true,
            ["text-theme-primary-text"]: pathname === "/" || pathname === `${import.meta.env.BASE_URL}`.slice(0, -1),
          }}>Home</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href={`${import.meta.env.BASE_URL}/posts`}
          class:list={{
            ["hover:text-theme-primary-text transition-colors"]: true,
            ["text-theme-primary-text"]: pathname === "/posts" || pathname === `${import.meta.env.BASE_URL}posts`,
          }}>Posts</a
        >
      </li>
    </ul>
  </nav>
</header>
